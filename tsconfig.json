{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "sourceMap": false,
    "baseUrl": "./",
    "strict": true,
    "paths": {
      "@/*": ["packages/renderer/src/*"],
      "@assets/*": ["assets/*"],
      "@icons/*": ["packages/renderer/src/icons/*"],
      "@interfaces/*": ["packages/interfaces/*"]
    },
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  }
}
